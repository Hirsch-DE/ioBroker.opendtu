{
	"i18n": true,
	"type": "panel",
	"items": {
		"webUIHeader": {
			"type": "header",
			"text": "Configure your OpenDTU WebUi connection",
			"size": 2,
			"newLine": true
		},
		"webUIScheme": {
			"type": "select",
			"label": "Scheme",
			"options": [
				{
					"label": "HTTP",
					"value": "http"
				},
				{
					"label": "HTTPS",
					"value": "https"
				}
			],
			"newLine": true
		},
		"webUIServer": {
			"type": "text",
			"label": "WebUi Address",
			"newLine": false
		},
		"webUIPort": {
			"type": "number",
			"label": "WebUi Port",
			"newLine": false
		},
		"password": {
			"type": "password",
			"label": "WebUi Password",
			"sm": 2,
			"newLine": true
		},
		"otherHeader": {
			"type": "header",
			"text": "Other configurations",
			"size": 2,
			"newLine": true
		},
		"protectNames": {
			"type": "checkbox",
			"label": "Protect self-set names from being overwritten by the adapter.",
			"newLine": true
		}
	}
}